#include <bits/stdc++.h>
using namespace std;
 
int main(){
string str;
int n;
int X=0;
cin>>n;
cin.ignore();
for(int i=0;i<n;i++){
      getline(cin,str);
 
if(str[1]=='+' && str[2]=='+'){
      X++;
}
if(str[1]=='-' && str[2]=='-'){
      X--;
}
if(str[0]=='+' && str[1]=='+'){
      ++X;
}
if(str[0]=='-' && str[1]=='-'){
      --X;
}
}
cout<<X;    
 return 0;
}
