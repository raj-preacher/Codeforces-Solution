#include<bits/stdc++.h>
 
using namespace std;
 
int main(){
   int n,k,w;
   cin>>k>>n>>w;
   int total_cost=0,pay_amt=0;
   for(int i=1;i<=w;i++){
         int cost=k*i;
         total_cost+=cost;
   }
  // cout<<total_cost;
   if(total_cost>n){
     pay_amt=total_cost-n;
     cout<<pay_amt;
   }else{
         cout<<0;
   }
}
