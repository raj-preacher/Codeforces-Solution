#include <bits/stdc++.h>
using namespace std;
int main(){
      int line;
      cin>>line;
      string str;
      cin.ignore();
      for(int i=0;i<line;i++){
      getline (cin,str);     
    if(str.length()>10){
          cout<<str[0]<<((str.length())-2)<<str[(str.length()-1)];
          cout<<endl;
}else{
cout<<str;
cout<<endl;
}
 }
 return 0;
}
