#include <bits/stdc++.h>
using namespace std;
int main(){
      int n;
      cin>>n;
int arr[n][3];
int count;
int count2=0;
for(int i=0;i<n;i++){
      for(int j=0;j<3;j++){
            cin>>arr[i][j];
      }
}
 
for(int i=0;i<n;i++){
      count=0;
      for(int j=0;j<3;j++){
            if(arr[i][j]==1){
                  count++;
            }
      }if(count>1){
            count2++;
      }
}cout<<count2;
 return 0;
}
